<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="332dp" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/responseEditText"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <Switch
            android:id="@+id/superUserSwitch"
            android:textSize="25dp"
            android:textColor="#000000"
            android:text="Advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="35dp"
            android:layout_height="19dp"
            android:background="@drawable/batteryicon" />

        <TextView
            android:textColor="#000000"
            android:layout_marginRight="120dp"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/batteryTextView"
            android:text="Battery:"
            />



        <Switch

            android:id="@+id/uvSwitch"
            android:textSize="25dp"
            android:textColor="#000000"
            android:text="UVC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/lastPressedButtonTextView"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4E7039"
            android:text="S"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout

        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:enabled="false"
            android:visibility="invisible"
            android:id="@+id/clearButton"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/clearbutton"
             />
        <Button
            android:id="@+id/forwardButton"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/top"
            android:text="" />
        <Button
            android:background="@drawable/stop"
            android:id="@+id/stopButton"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/leftButton"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/left"
            android:text="" />
        <Button
            android:background="@drawable/bottom"
            android:id="@+id/backButton"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="" />
        <Button
            android:id="@+id/rightButton"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/right"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwmValueTextView"
            android:text="Speed:0"
            android:textColor="#000000"
            />
        <SeekBar
            android:background="#FFFFFF"
            android:min="0"
            android:max="250"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/pwmSeekBar"
            />

    </LinearLayout>
    <TextView
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Made by Aadeeb and Nafiz from CSE 17,MIST"
        />


</LinearLayout>